<RecipeDef>
	<defName>LotRE_CraftLembasflour</defName>
	<label>grind lembas flour</label>
	<description>Grind lembas corn into lembas flour.</description>
	<jobString>Grinding lembas corn.</jobString>
	<workSpeedStat>CookSpeed</workSpeedStat>
		<effectWorking>Cook</effectWorking>
	<workAmount>700</workAmount>
     <soundWorking>Recipe_CookMeal</soundWorking>          	<allowMixingIngredients>true</allowMixingIngredients>
	<recipeUsers>
	  <li>ElectricStove</li>
	  <li>FueledStove</li>
<!--
            <li>Canningstove</li>
            <li>HandCanningstove</li>
-->
    </recipeUsers>

	<ingredients>
	  <li>
	    <filter>
	      <thingDefs>
	        <li>LotRE_RawLembasCorn</li>
	      </thingDefs>
	    </filter>
	    <count>10</count>
	  </li>
	</ingredients>
	<fixedIngredientFilter>
	  <thingDefs>
	    <li>LotRE_RawLembasCorn</li>
	  </thingDefs>
      <specialFiltersToDisallow>
        <li>AllowRotten</li>
      </specialFiltersToDisallow>

	</fixedIngredientFilter>
	<products>
	  <LotRE_Lembasflour>4</LotRE_Lembasflour>
	</products>
	<workSkill>Cooking</workSkill>
</RecipeDef>


