<?xml version="1.0" encoding="UTF-8"?>

<Defs>

   <!-- Without vegetable garden, Lembas bread is produced with lembas cornmeal. -->
   <RecipeDef>
	<defName>LotRE_BakeElvenBread</defName>
	<label>bake Elven bread loaf</label>
	<description>Bake delicious Elven bread, which can be used to make Elven waybread. \n\nMakes 1 loaf.</description>
	<jobString>Baking Elven bread.</jobString>
	<workSpeedStat>CookSpeed</workSpeedStat>
	<effectWorking>Cook</effectWorking>
	<workAmount>1000</workAmount>
     <soundWorking>Recipe_CookMeal</soundWorking>          
	<recipeUsers>
	  <li>ElectricStove</li>
	  <li>FueledStove</li>
<!--      
	  <li>Oven</li>
        <li>ElectricOven</li>
-->
      </recipeUsers>
	<ingredients>
<!--
	  <li>
	    <filter>
	      <thingDefs>

	        <li>Flour</li>

	      </thingDefs>
	    </filter>
	    <count>4</count>
	  </li>
-->
	  <li>
	    <filter>
	      <thingDefs>
	        <li>LotRE_Lembasflour</li>
	      </thingDefs>
	    </filter>
	    <count>8</count>
	  </li>
	</ingredients>
	<fixedIngredientFilter>
	  <thingDefs>
	        <li>LotRE_Lembasflour</li>
<!--
	    <li>Flour</li>
	    <li>Cornmeal</li>
-->
	  </thingDefs>
      <specialFiltersToDisallow>
        <li>AllowRotten</li>
      </specialFiltersToDisallow>
	</fixedIngredientFilter>
	<products>
	  <LotRE_ElvenBread>1</LotRE_ElvenBread>
	</products>
	<workSkill>Cooking</workSkill>
</RecipeDef>

   <RecipeDef>
