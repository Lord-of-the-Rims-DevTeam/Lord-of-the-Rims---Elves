<Defs>


  <ThingDef ParentName="LotRE_ApparelMakeableBase">
    <defName>LotRE_Apparel_Cape</defName>
    <label>elf-cape (woodland)</label>
    <description>A fashionable cape worn by the elves that uses dark forest colors.</description>
    <graphicData>
      <texPath>Things/Pawn/Elf/Apparel/HoodedCape/ennacrimaCloak_Male_front</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
    <costStuffCount>50</costStuffCount>
    <stuffCategories>
      <li>Fabric</li>
      <li>Leathery</li>
    </stuffCategories>
    <thingCategories>
      <li>Apparel</li>
    </thingCategories>
    <statBases>
      <MaxHitPoints>120</MaxHitPoints>
      <WorkToMake>12000</WorkToMake>
      <Mass>1.2</Mass>
      <ArmorRating_Sharp>0.03</ArmorRating_Sharp>
      <ArmorRating_Heat>0.03</ArmorRating_Heat>
      <Insulation_Cold>-16</Insulation_Cold>
    </statBases>
    <equippedStatOffsets>
      <MoveSpeed>-0.01</MoveSpeed>
    </equippedStatOffsets>
    <apparel>
      <bodyPartGroups>
        <li>Torso</li>
        <li>Shoulders</li>
        <li>Arms</li>
      </bodyPartGroups>
      <wornGraphicPath>Things/Pawn/Elf/Apparel/HoodedCape/ennacrimaCloak</wornGraphicPath>
      <layers>
        <li>Shell</li>
      </layers>
      <tags>
        <li>LotRE_ElvenApparel</li>
      </tags>
    </apparel>
    <colorGenerator Class="ColorGenerator_Options">
      <options>
        <li>
          <weight>10</weight>
          <only>RGBA(0.31,0.40,0.3,1)</only>
        </li>
        <li>
          <weight>10</weight>
          <only>RGBA(0.31,0.16,0.1,1)</only>
        </li>
      </options>
    </colorGenerator>
  </ThingDef>

