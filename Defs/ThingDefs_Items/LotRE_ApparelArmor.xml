<?xml version="1.0" encoding="utf-8" ?>
<Defs>

	<ThingDef ParentName="LotRE_ArmorMakeableBase">
    <defName>LotRE_ElfApparel_BattleArmor</defName>
    <label>Elven Ñoldorin armor</label>
    <description>Excellent reinforced leather armor laid with fine metals make the finest Elven battle armor for the Ñoldor, a valiant group of elves named the deep-elves for their wisdom and also named sword-elves for their skills in combat.</description>
    <techLevel>Medieval</techLevel>
    <recipeMaker>
      <unfinishedThingDef>UnfinishedMetallicTechArmor</unfinishedThingDef>
    </recipeMaker>
    <graphicData>
      <texPath>Things/Pawn/Elf/Apparel/Armor/nackbladElvenArmorDisplay</texPath>
      <graphicClass>Graphic_Single</graphicClass>
      <shaderType>CutoutComplex</shaderType>
    </graphicData>
    <!-- <co+0.stStuffCount>250</costStuffCount> -->
    <!-- <stuffCategories>
      <li>Metallic</li>
    </stuffCategories> -->
    <costStuffCount>50</costStuffCount>
    <stuffCategories>
      <li>Leathery</li>
    </stuffCategories>
	<costList>
      <Steel>50</Steel>
      <Silver>50</Silver>
      <Gold>50</Gold>
	</costList>	
    <statBases>
      <WorkToMake>17000</WorkToMake>
      <MaxHitPoints>300</MaxHitPoints>
      <Mass>15</Mass>
      <ArmorRating_Blunt>0.25</ArmorRating_Blunt>
      <ArmorRating_Sharp>0.55</ArmorRating_Sharp>
      <ArmorRating_Heat>0.20</ArmorRating_Heat>
      <Insulation_Cold>-45</Insulation_Cold>
    </statBases>
    <equippedStatOffsets>
      <MoveSpeed>-0.10</MoveSpeed>
      <WorkSpeedGlobal>-0.10</WorkSpeedGlobal>
    </equippedStatOffsets>
    <thingCategories>
      <li>Apparel</li>
    </thingCategories>
		<generateCommonality>2</generateCommonality>
		<apparel>
			<bodyPartGroups>
				<li>Torso</li>
        <li>Neck</li>
				<li>Shoulders</li>
				<li>Arms</li>
				<li>Legs</li>
			</bodyPartGroups>
			<wornGraphicPath>Things/Pawn/Elf/Apparel/Armor/nackbladElvenArmor</wornGraphicPath>
			<layers>
				<li>Middle</li>
				<li>Shell</li>
			</layers>
			<tags>
			  <li>LotR_ElfMilitary</li>
			</tags>
      <defaultOutfitTags>
        <li>LotR_ElfWarrior</li>
      </defaultOutfitTags>
    </apparel>
  </ThingDef>

