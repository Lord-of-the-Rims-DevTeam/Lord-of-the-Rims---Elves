  <ThingDef ParentName="LotRE_BaseWeaponNeolithic">
    <defName>LotRE_Bow_Mirkwood</defName>
    <label>mirkwood-elf bow</label>
    <description>Efficient at both close and medium range, this rapid-fire bow provides maximum stopping power for threats to Elven strongholds.</description>
    <graphicData>
      <texPath>Things/Item/Equipment/WeaponRanged/LotRE_MirkwoodBow</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
    <soundInteract>BowRecurve</soundInteract>
    <costList>
      <WoodLog>60</WoodLog>
    </costList>
    <statBases>
      <WorkToMake>18000</WorkToMake>
      <Mass>0.7</Mass>
      <AccuracyTouch>0.96</AccuracyTouch>
      <AccuracyShort>0.87</AccuracyShort>
      <AccuracyMedium>0.77</AccuracyMedium>
      <AccuracyLong>0.60</AccuracyLong>
      <RangedWeapon_Cooldown>0.8</RangedWeapon_Cooldown>
      <Weapon_Bulk>1.0</Weapon_Bulk>
    </statBases>
    <weaponTags>
      <li>ElvenRanged</li>
    </weaponTags>
    <recipeMaker>
      <recipeUsers>
        <li>ElectricSmithy</li>
        <li>FueledSmithy</li>
        <li>CraftingSpot</li>
      </recipeUsers>
      <researchPrerequisite>Greatbows</researchPrerequisite>
    </recipeMaker>
    <verbs>
      <li>
        <verbClass>Verb_Shoot</verbClass>
        <hasStandardCommand>true</hasStandardCommand>
        <defaultProjectile>LotRE_Arrow_Mirkwood</defaultProjectile>
        <warmupTime>0.6</warmupTime>
        <range>38</range>
        <soundCast>LotRE_BowMirkwood</soundCast>
      </li>
    </verbs>
    <tools>
      <li>
        <capacities>
          <li>Blunt</li>
          <li>Poke</li>
        </capacities>
        <power>8</power>
        <cooldownTime>1.6</cooldownTime>
      </li>
    </tools>
  </ThingDef>

