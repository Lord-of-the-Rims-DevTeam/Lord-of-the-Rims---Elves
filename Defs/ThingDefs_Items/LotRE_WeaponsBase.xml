<?xml version="1.0" encoding="utf-8" ?>
<Defs>

  <ThingDef Name="LotRE_BaseMeleeWeapon" Abstract="True" ParentName="BaseWeapon">
    <techLevel>Industrial</techLevel>
		<smeltable>true</smeltable>
    <thingCategories>
      <li>WeaponsMelee</li>
    </thingCategories>

    <recipeMaker>
      <workSpeedStat>SmithingSpeed</workSpeedStat>
      <workSkill>Crafting</workSkill>
      <effectWorking>Smith</effectWorking>
      <soundWorking>Recipe_Smith</soundWorking>
      <recipeUsers>
        <li>ElectricSmithy</li>
        <li>FueledSmithy</li>
      </recipeUsers>
      <unfinishedThingDef>UnfinishedWeapon</unfinishedThingDef>
    </recipeMaker>
    <inspectorTabs>
      <li>ITab_Art</li>
    </inspectorTabs>
  </ThingDef>

		<ThingDef Name="LotRE_BaseMeleeWeapon_Sharp" ParentName="LotRE_BaseMeleeWeapon" Abstract="True">
    <recipeMaker>
    <defaultIngredientFilter>
      <categories>
        <li>Root</li>
      </categories>
      <exceptedThingDefs>
        <li>Silver</li>
        <li>Gold</li>
        <li>WoodLog</li>
      </exceptedThingDefs>
    </defaultIngredientFilter>
    </recipeMaker>
  </ThingDef>
  
	<ThingDef Name="LotRE_BaseMeleeWeapon_Sharp_Quality" Abstract="True" ParentName="LotRE_BaseMeleeWeapon_Sharp">
		<comps>
			<li>
				<compClass>CompQuality</compClass>
			</li>
			<li Class="CompProperties_Art">
				<nameMaker>ArtName_WeaponMelee</nameMaker>
				<descriptionMaker>ArtDescription_WeaponMelee</descriptionMaker>
				<minQualityForArtistic>Excellent</minQualityForArtistic>
			</li>
		</comps>
	</ThingDef>

</Defs>