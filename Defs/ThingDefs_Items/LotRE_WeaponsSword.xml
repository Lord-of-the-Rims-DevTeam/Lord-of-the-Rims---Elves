<Defs>

<!-- Tier 1 -->


	<ThingDef ParentName="LotRE_BaseMeleeWeapon_Sharp_Quality">
    <defName>LotRE_MeleeWeapon_WhiteKnives</defName>
    <label>Elven Knives</label>
    <description>Twin white knives provide fast and deadly melee damage to quickly dispatch many foes from the battlefield.</description>
    <graphicData>
      <texPath>Things/Item/Equipment/WeaponMelee/ElvenKnife</texPath>
      <graphicClass>Graphic_Single</graphicClass>
	  <drawSize>0.65</drawSize>
    </graphicData>
    <techLevel>Medieval</techLevel>
    <weaponTags>
      <li>ElvenMelee</li>
      <li>ElvenMeleeWeak</li>
    </weaponTags>
    <costStuffCount>133</costStuffCount>
	<costList>
	  <WoodLog>10</WoodLog>
      <Silver>1</Silver>
	</costList>		
    <statBases>
      <WorkToMake>24500</WorkToMake>
      <Mass>1.3</Mass>
      <Weapon_Bulk>1.0</Weapon_Bulk>
    </statBases>
    <equippedAngleOffset>60</equippedAngleOffset>
    <stuffCategories>
      <li>Metallic</li>
    </stuffCategories>
	<comps>
	  <li Class="CompOversizedWeapon.CompProperties_OversizedWeapon">
	  <isDualWeapon>true</isDualWeapon>
	  <verticalFlipNorth>true</verticalFlipNorth>
	  <angleAdjustmentWest>90</angleAdjustmentWest>
	  <angleAdjustmentEast>-90</angleAdjustmentEast>
	  <northOffset>(0.13,0,0.15)</northOffset>
	  <eastOffset>(0,0,0.1)</eastOffset>
	  <westOffset>(0,0,0.1)</westOffset>
	  <southOffset>(-0.13,0,-0.15)</southOffset>
		<groundGraphic>
		  <texPath>Things/Item/Equipment/WeaponMelee/ElvenKnifeGround</texPath>
		  <graphicClass>Graphic_Single</graphicClass>
		  <drawSize>0.65</drawSize>
		  <onGroundRandomRotateAngle>90</onGroundRandomRotateAngle>
		</groundGraphic>
	  </li>
	</comps>
    <tools>
      <li>
        <label>handle</label>
        <capacities>
          <li>Blunt</li>
        </capacities>
        <power>6</power>
        <cooldownTime>2.5</cooldownTime>
      </li>
      <li>
        <label>point</label>
        <capacities>
          <li>Stab</li>
        </capacities>
        <power>17</power>
        <cooldownTime>2.5</cooldownTime>
      </li>
      <li>
        <label>edge</label>
        <capacities>
          <li>Cut</li>
        </capacities>
        <power>9</power>
        <cooldownTime>0.95</cooldownTime>
      </li>
    </tools>
    <recipeMaker>
      <researchPrerequisite>LongBlades</researchPrerequisite>
    </recipeMaker>
  </ThingDef>

