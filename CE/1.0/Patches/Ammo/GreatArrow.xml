<?xml version="1.0" encoding="utf-8"?>
<Patch>
  <Operation Class="PatchOperationSequence">
    <success>Always</success>
    <operations>
      <!--Continue if combat extended does exist-->
      <li Class="ModCheck.isModLoaded">
        <modName>Lord of the Rims - The Third Age</modName>
        <yourMod>Lord of the Rims CE Patch</yourMod>
      </li>
      <li Class="PatchOperationAdd">
        <xpath>Defs/RecipeDef[defName="MakeAmmo_GreatArrow_Stone"]</xpath>
        <value>
          <recipeUsers>
            <li>FueledSmithy</li>
            <li>CraftingSpot</li>
          </recipeUsers>
        </value>
      </li>
      <li Class="PatchOperationAdd">
        <xpath>Defs/RecipeDef[defName="MakeAmmo_GreatArrow_Steel"]</xpath>
        <value>
          <recipeUsers>
            <li>FueledSmithy</li>
          </recipeUsers>
        </value>
      </li>
    </operations>
  </Operation>
</Patch>