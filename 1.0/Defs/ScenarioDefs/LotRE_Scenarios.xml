<?xml version="1.0" encoding="utf-8"?>
<Defs>
  <FactionDef ParentName="PlayerFactionBase">
    <defName>LotRE_PlayerColony</defName>
    <label>Elf Settlement</label>
    <description>Your own community.</description>
    <isPlayer>true</isPlayer>
    <basicMemberKind>LotRE_ElfVillagerHigh</basicMemberKind>
    <pawnsPlural>colonists</pawnsPlural>
    <techLevel>Medieval</techLevel>
    <backstoryCategories>
      <li>LotRE_BackstoryElf</li>
    </backstoryCategories>
    <expandingIconTexture>World/WorldObjects/Expanding/Town</expandingIconTexture>
    <settlementNameMaker>NamerSettlementOutlander</settlementNameMaker>
    <playerInitialSettlementNameMaker>NamerSettlementOutlander</playerInitialSettlementNameMaker>
    <factionNameMaker>NamerSettlementOutlander</factionNameMaker>
    <geneticVariance>1</geneticVariance>
    <!--
		<startingResearchTags>
			<li>ClassicStart</li>
		</startingResearchTags>
		-->
    <hairTags>
      <li>Elf</li>
    </hairTags>
    <apparelStuffFilter>
      <thingDefs>
        <li>Cloth</li>
      </thingDefs>
    </apparelStuffFilter>
  </FactionDef>
  <ScenarioDef>
    <defName>LotRE_ANewTerritory</defName>
    <label>Elves - A New Territory</label>
    <description>Decisions on the high council have led to sending four settlers to new lands. Will they create a thriving city or a grand fortress?</description>
    <scenario>
      <summary>Four Elves set up to help found a new Elven territory.</summary>
      <playerFaction>
        <def>PlayerFaction</def>
        <factionDef>LotRE_PlayerColony</factionDef>
      </playerFaction>
      <parts>
        <!-- Config pages -->
        <li Class="ScenPart_ConfigPage_ConfigureStartingPawns">
          <def>ConfigPage_ConfigureStartingPawns</def>
          <pawnCount>4</pawnCount>
          <pawnChoiceCount>8</pawnChoiceCount>
        </li>
        <!-- Player starting stuff spawn method-->
        <li Class="ScenPart_PlayerPawnsArriveMethod">
          <def>PlayerPawnsArriveMethod</def>
          <method>Standing</method>
          <visible>false</visible>
        </li>
        <!-- Player starting things -->
        <li Class="ScenPart_StartingThing_Defined">
          <def>StartingThing_Defined</def>
          <thingDef>Silver</thingDef>
          <count>800</count>
        </li>
        <li Class="ScenPart_StartingThing_Defined">
          <def>StartingThing_Defined</def>
          <thingDef>LotRE_LembasWaybread</thingDef>
          <count>33</count>
        </li>
        <li Class="ScenPart_StartingThing_Defined">
          <def>StartingThing_Defined</def>
          <thingDef>MedicineHerbal</thingDef>
          <count>30</count>
        </li>
        <li Class="ScenPart_StartingAnimal">
          <def>StartingAnimal</def>
          <count>1</count>
          <animalKind>LotRE_DeerMallornKind</animalKind>
          <bondToRandomPlayerPawnChance>1.0</bondToRandomPlayerPawnChance>
        </li>
        <li Class="ScenPart_StartingAnimal">
          <def>StartingAnimal</def>
          <count>2</count>
          <animalKind>LotR_HorseKind</animalKind>
          <bondToRandomPlayerPawnChance>1.0</bondToRandomPlayerPawnChance>
        </li>
        <!-- Starting research -->
        <li Class="ScenPart_StartingResearch">
          <def>StartingResearch</def>
          <project>ComplexClothing</project>
        </li>
        <li Class="ScenPart_StartingResearch">
          <def>StartingResearch</def>
          <project>ComplexFurniture</project>
        </li>
        <li Class="ScenPart_StartingResearch">
          <def>StartingResearch</def>
          <project>Smithing</project>
        </li>
        <li Class="ScenPart_StartingResearch">
          <def>StartingResearch</def>
          <project>RecurveBow</project>
        </li>
        <li Class="ScenPart_StartingResearch">
          <def>StartingResearch</def>
          <project>LongBlades</project>
        </li>
        <li Class="ScenPart_StartingResearch">
          <def>StartingResearch</def>
          <project>Greatbow</project>
        </li>
        <li Class="ScenPart_StartingThing_Defined">
          <def>StartingThing_Defined</def>
          <thingDef>LotRE_ElfApparel_BattleArmor</thingDef>
          <stuff>Leather_Plain</stuff>
        </li>
        <li Class="ScenPart_StartingThing_Defined">
          <def>StartingThing_Defined</def>
          <thingDef>LotRE_Bow_Rivendell</thingDef>
        </li>
        <li Class="ScenPart_StartingThing_Defined">
          <def>StartingThing_Defined</def>
          <thingDef>LotRE_Bow_Rivendell</thingDef>
        </li>
        <!-- Scatter some things near player start -->
        <li Class="ScenPart_ScatterThingsNearPlayerStart">
          <def>ScatterThingsNearPlayerStart</def>
          <thingDef>Steel</thingDef>
          <count>450</count>
        </li>
        <li Class="ScenPart_ScatterThingsNearPlayerStart">
          <def>ScatterThingsNearPlayerStart</def>
          <thingDef>WoodLog</thingDef>
          <count>300</count>
        </li>
        <li Class="ScenPart_ScatterThingsAnywhere">
          <def>ScatterThingsAnywhere</def>
          <thingDef>Steel</thingDef>
          <count>720</count>
        </li>
        <li Class="ScenPart_ScatterThingsAnywhere">
          <def>ScatterThingsAnywhere</def>
          <thingDef>MealSurvivalPack</thingDef>
          <count>7</count>
        </li>
      </parts>
    </scenario>
  </ScenarioDef>
</Defs>